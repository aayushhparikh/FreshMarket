<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/price_id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="15dp"
                android:layout_below="@id/name_id2"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/add1"
                android:layout_width="53dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/add"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/minus1"
                android:layout_width="53dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/minus"
                android:layout_toLeftOf="@id/quantity_id"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/quantity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/add1"
                android:layout_centerVertical="true"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>