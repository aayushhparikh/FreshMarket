<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".LoginPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:text="Sign in into your FreshMarket Account"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:padding="20dp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/signup"
        android:layout_margin="20dp"
        android:hint="Email"
        android:padding="20dp">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/email"
        android:id="@+id/password"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:padding="20dp">
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signin"
        android:layout_below="@id/password"
        android:text="Sign in"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/donthaveacc"
        android:layout_below="@id/signin"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="New to FreshMarket?">
    </TextView>

    <TextView
        android:id="@+id/createone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donthaveacc"
        android:gravity="center"
        android:padding="2dp"
        android:setText="@string/hyperlink"
        android:text="Create an account."></TextView>
</RelativeLayout>